{
	"name": "mediawiki/ldap-provider",
	"extra": {
		"installer-name": "LDAPProvider"
	},
	"license": "GPL-2.0+",
	"type": "mediawiki-extension",
	"homepage": "https://www.mediawiki.org/wiki/Extension:LDAPProvider",
	"description": "Provides a mechanism for MediaWiki to retrieve information using the LDAP protocol",
	"keywords": [
		"extension",
		"wiki",
		"mediawiki",
		"ldap"
	],
	"authors": [
		{
			"name": "Robert Vogel",
			"email": "vogel@hallowelt.com",
			"role": "Developer"
		},
		{
			"name": "Mark A. Hershberger",
			"email": "mah@nichework.com",
			"role": "Contributor"
		},
		{
			"name": "Cindy Cicalese",
			"email": "cindom@gmail.com",
			"role": "Contributor"
		}
	],
	"require": {
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "34.0.0",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"mediawiki/mediawiki-phan-config": "^0.10.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -sp",
			"phan -m text --target-php-version 7.3 --no-progress-bar | sed 's, ,:,'"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
